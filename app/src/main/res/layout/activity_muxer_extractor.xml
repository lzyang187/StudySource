<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".muxerextractor.MuxerExtractorActivity">

    <Button
        android:id="@+id/btn_extractor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="extractor" />

    <Button
        android:id="@+id/btn_extractor_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="从视频中分离音频文件" />

    <Button
        android:id="@+id/btn_extractor_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="从视频中分离视频文件" />

    <Button
        android:id="@+id/btn_muxer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="合并上面2个文件为新的视频文件" />

    <Button
        android:id="@+id/btn_decode_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="解码音频为PCM文件" />

    <Button
        android:id="@+id/btn_encode_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编码PCM文件" />


</android.support.v7.widget.LinearLayoutCompat>